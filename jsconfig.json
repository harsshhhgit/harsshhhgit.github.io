{
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@logic/*": ["./src/logic/*"],
      "@css/*": ["./src/styles/*"],
      "@components/*": ["./src/components/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
}